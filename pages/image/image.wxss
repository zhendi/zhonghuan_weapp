.container{
  width: 100vw;
  height: 100vh;
  background-color: #000000;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.picture-num{
  	font-family: PingFang-SC-Medium;
    font-size: 12px;
    font-weight: normal;
    font-stretch: normal;
    letter-spacing: 0px;
    color: #454545;
    position: fixed;
    margin-top: 16px;
    text-align: center;
    top: 0;
    left: 0;
    width: 100%;
}
.pictures-list{
  width: 100%;
  height:488rpx;
}
.pictures-list-item{
  width: 100%;
  height: 100%;
}
.image{
  width: 100%;
  height: 100%;
}
.nav-bottom-wrap{
  height:20px;
  margin-bottom:20px;
  position:fixed;
  bottom:0;
  width:100%;
  left:0;
  flex-direction: row;
  justify-content: space-around; 
  display: flex;
}
.bottom-item{
  font-size: 12px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
  flex: 1;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.selected-icon{
  width: 14px;
  height: 8px;
  position: absolute;
  left: 50%;
  margin-left: -7px;
  top: -12px;
}
.selected-bottom-item{
  color: #e70012;
}