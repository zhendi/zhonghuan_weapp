.container{
  min-height: 100vh;
  background-color: #dedede; 
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.swiper{
  width: 100%;
  height: 949rpx;
  margin-top: 114rpx;
}
.adviser-wrap{
  width: 616rpx;
	height: 949rpx;
	box-shadow: 0px 3px 14px 0px 
		rgba(0, 0, 0, 0.1);
	border-radius: 10px;
  overflow: hidden;
  margin: 0 auto;
}
.adviser-photo-wrap{
  width: 100%;
  height: 535rpx;
}
.adviser-photo{
  width: 100%;
  height: 100%;
  background-color: #e5e6eb;
}
.adviser-info{
  background-color: #ffffff;
  padding-left: 18rpx;
  height: 414px;
}
.adviser-name-wrap{
  padding-top: 26rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.adviser-name-right{
  width: 75px;
	height: 22px;
  line-height: 22px;
	background-color: #ff5353;
	border-radius: 4px;
  font-size: 12px;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ffffff;
  margin-right: 11px;
  text-align: center;
}
.adviser-name{
  font-size: 40rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #231815;
}
.adviser-rank{
  font-family: PingFang-SC-Medium;
  font-size: 25rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #898989;
  margin-left: 6rpx;
}
.property-name-wrap{
  margin-top: 26rpx;
}
.property-title{
  font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #898989;
}
.property-name{
  font-family: PingFang-SC-Bold;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #ff5353;
  margin-left: 6rpx;
}
.level-title{
  font-family: PingFang-SC-Medium;
	font-size: 30rpx;
	font-weight: normal;
	font-stretch: normal;
	letter-spacing: 0px;
	color: #898989;
  margin-top: 30rpx;
}
.level-image{
  width: 220rpx;
  height: 40rpx;
  margin-top: 10rpx; 
  display: block; 
}
.select-adviser{
  width: 142px;
	height: 35px;
	background-color: #ff5353;
	border-radius: 5px;
  margin: 0 auto;
  margin-top: 15px;
  display: block;
  color: #ffffff;
  line-height: 35px;
  text-align: center;
  box-shadow: 0px 3px 13px 0px 
		rgba(155, 0, 0, 0.26);
}