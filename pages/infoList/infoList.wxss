.bg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.info-item{
  width: 296px;
  height:373px;
  margin: 0 auto;
  background-color: #ffffff;
  	box-shadow: 0px 8px 24px 0px 
		rgba(25, 25, 25, 0.13);
  border-radius: 11px;
  text-align: center;
  padding: 0 20px;
  margin-bottom: 32px;
  position:relative;
  z-index: 10;
}
.info-item:first-child{
  margin-top:90px;
}
.info-title-wrap{
  font-size:19px;
  height: 47px;
  margin: 0 auto;
  padding-top: 22px;
  text-overflow:ellipsis;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  word-break: break-all;
  flex-wrap: wrap;
  color: #231815;
  white-space: pre-wrap;
  font-weight: 800;
}
.info-image{
  width: 100%;
  height: 177px;
  background-color: #c8c8c8;
  border-radius: 4px;
  margin-top: 17px;
}
.info-desc{
  margin-left:10px;
  margin-right: 20px;
  font-size: 14px;
  height: 35px;
  text-overflow:ellipsis;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  color: #595757;
  margin: 0 auto;
  margin-top:24px;
  white-space: pre-wrap;
}
.view-time{
  display: flex;
  justify-content: space-between;
  margin-top: 9px;
  align-items: center;
}
.info-view{
  color: #727171;
  font-size: 12px;
  margin-top: 10px;
}
.time{
  font-size: 12px;
  color: #727171;
}