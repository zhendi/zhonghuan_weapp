.popup-warpper {
width: 100%;
height: 100%;
position: fixed;
left: 0;
bottom: 0;
z-index: 999;
display: none;
}
.popup-warpper .wrapper {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  background: #fff;
  overflow-y: auto;
  transform: translateY(100%);
  transition: all 1s ease;
}
.popup-warpper .show-wrappe{
  transform: translateY(50%);
}
.popup-warpper-show{
  background: rgba(0,0,0,0.1);
  display: block;
}
.popup-warpper .wrapper .title {
  height: 110rpx;
  line-height: 110rpx;
  background: rgba(59,79,98,0.1);
  display: flex;
  padding: 0 30rpx;
  color: #0cc071;
  font-size: 34rpx;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  background-color: #ffffff;
  border-radius: 10px;
  overflow: hidden;
}
.popup-warpper .wrapper .title.pop-title {
color: #9da4b5;
font-size: 30rpx;
text-align: center;
display: block;
}
.popup-warpper .wrapper .title .cancel {
flex: 1;
}
.popup-warpper .wrapper .title .confirm {
flex: 1;
text-align: right;
}
.close{
  width: 25px;
  height: 25px;
  position: absolute;
  top: 3px;
  right: 5px;
}
.close-left{
 width:2px;
  height:14px;
  background:#9c9b9b;
  transform:rotate(45deg);
  position:absolute;
  left:10px;
  top:5px;
}
.close-right{
  width:2px;
  height:14px;
  background:#9c9b9b;
  transform:rotate(-45deg);
  position:absolute;
  left:10px;
  top:5px;
}